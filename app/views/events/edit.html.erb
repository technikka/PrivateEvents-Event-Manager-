<%= form_with model: @event do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %> <br> <br>
  <%= form.label :location %> 
  <%= form.text_field :location %> <br> <br>
  <%= form.label :date %>
  <%= form.date_field :date %> <br> <br>
  <%= form.label :notes %> <br>
  <%= form.text_area :notes, size: '30x10' %> <br><br>
  <%= form.submit "Update Event" %>
  <%= link_to "Destroy this event", event_path(@event.id), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }  %>
<% end %>